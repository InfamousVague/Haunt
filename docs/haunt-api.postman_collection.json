        {
          "name": "Get Challenge",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/challenge",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "challenge"]
            },
            "description": "Get a challenge string to sign for authentication."
          },
          "response": []
        },
        {
          "name": "Verify Challenge",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"publicKey\": \"0x1234567890abcdef...\",\n  \"signature\": \"0xabcdef1234567890...\",\n  \"challenge\": \"haunt:1700000000000:abc123def456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify",
